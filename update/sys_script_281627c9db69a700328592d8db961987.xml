        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	var isSubTask=true;
	//没有子任务管理的任务清单
	finish(current.sys_id);
	
	//当前任务管理了子任务
	//子任务关联的任务清单
	if(isSubTask){
		var task=new GlideRecord(current.getTableName());
		task.addQuery("parent",current.sys_id);
		task.query();
		while(task.next()){
			finish(task.sys_id);
		}
	}
	
	function finish(sysId){
		var gr=new GlideRecord("x_envision_itam_stock_take_detail");
		gr.addQuery("task_number",sysId);
		gr.addQuery("stock_take_state","=","1");//executing
		gr.query();
		while(gr.next()){
			isSubTask=false;
			gr.stock_take_state="2";//finished
			gr.finish_time=new GlideDateTime();
			gr.update();
		}
	}
})(current, previous);]]></script>
